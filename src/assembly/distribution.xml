<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 
          http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <!-- Application JAR -->
        <fileSet>
            <directory>target</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>blood-bank-management-1.0.0.jar</include>
            </includes>
        </fileSet>
        
        <!-- Configuration files -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>application*.properties</include>
            </includes>
        </fileSet>
        
        <!-- Database scripts -->
        <fileSet>
            <directory>database</directory>
            <outputDirectory>database</outputDirectory>
            <includes>
                <include>*.sql</include>
            </includes>
        </fileSet>
        
        <!-- Documentation -->
        <fileSet>
            <directory>docs</directory>
            <outputDirectory>docs</outputDirectory>
            <includes>
                <include>*.md</include>
                <include>*.txt</include>
            </includes>
        </fileSet>
        
        <!-- Scripts -->
        <fileSet>
            <directory>.</directory>
            <outputDirectory>scripts</outputDirectory>
            <includes>
                <include>run-swing-client.sh</include>
                <include>run-swing-client.bat</include>
                <include>start-server.sh</include>
                <include>start-server.bat</include>
                <include>stop-server.sh</include>
                <include>stop-server.bat</include>
            </includes>
        </fileSet>
        <!-- Create logs directory -->
        <fileSet>
            <directory>.</directory>
            <outputDirectory>logs</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
